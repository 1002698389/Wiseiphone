<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vb_bg"
    android:orientation="vertical" 
    android:clickable="true"
    android:padding="1dip"
    >

    <com.wh.ws.ui.MyVideo
        android:id="@+id/fgt_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="12dip" />

    <TextView
        android:id="@+id/fgt_tv"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_gravity="bottom"
        android:background="#FF49802E"
        android:paddingBottom="4dip"
        android:paddingLeft="4dip"
        android:gravity="center_vertical|left"
        android:text="Hanzhou.china"
        android:textColor="@color/whiles"
        android:textSize="14sp" />



<RelativeLayout
    android:id="@+id/fgt_contrals"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alphl" 
    android:layout_marginBottom="18dip"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ImageButton
            android:id="@+id/fgt_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/alphl"
            android:src="@drawable/img_top"
   />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <ImageButton
              android:id="@+id/fgt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/alphl"
            android:src="@drawable/img_left" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
     
         android:layout_alignParentBottom="true"
     
        >

        <ImageButton
              android:id="@+id/fgt_buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/alphl"
            android:src="@drawable/img_buttom"
           
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
         >

        <ImageButton
            android:id="@+id/fgt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/alphl"
            android:src="@drawable/img_right" />
    </RelativeLayout>
</RelativeLayout>
<com.wh.ws.ui.DrawX
    android:id="@+id/fgt_drawx"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dip"
    />

 

        <ImageButton
            android:id="@+id/fgt_ib_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.62"
            android:scaleType="fitCenter"
            android:src="@drawable/fgt_add"
            android:layout_marginBottom="20dip"
             />
</FrameLayout>